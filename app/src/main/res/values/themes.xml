<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Diabuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/teal</item>
    <item name="android:textColor">@color/teal_dark</item>
    <item name="colorPrimaryVariant">@color/teal_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/orange</item>
    <item name="colorSecondaryVariant">@color/orange_dark</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="fontFamily">@font/nunito</item>
    <item name="nav_drawer_bg">@drawable/nav_header_bg</item>
</style>

<style name="Theme.Diabuddy.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="Theme.Diabuddy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

<style name="Theme.Diabuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="Theme.Diabuddy.ImageButton" parent="Theme.Diabuddy">
    <item name="backgroundTint">@color/light_gray</item>
    <item name="tint">@color/black</item>
</style>
</resources>