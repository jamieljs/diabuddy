<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_logbook"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/teal_extra_light"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/black"/>

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/time_tv"
            app:layout_constraintStart_toEndOf="@id/time_tv"
            android:background="@color/translucent_black"/>

        <TextView
            android:id="@+id/reading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/divider"
            app:layout_constraintStart_toEndOf="@id/divider"
            android:text="0.0"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/reading_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintTop_toTopOf="@id/reading_tv"
            app:layout_constraintBottom_toBottomOf="@id/reading_tv"
            app:layout_constraintLeft_toRightOf="@id/reading_tv"
            app:layout_constraintStart_toEndOf="@id/reading_tv"
            android:text="@string/mmol_l"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/droplet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ic_droplet_white_24dp"
            app:tint="@color/translucent_black"
            app:layout_constraintTop_toTopOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="@id/divider"
            app:layout_constraintLeft_toRightOf="@id/reading_unit_tv"
            app:layout_constraintStart_toEndOf="@id/reading_unit_tv"/>
        <ImageView
            android:id="@+id/injection_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/syringe_white"
            app:tint="@color/translucent_black"
            app:layout_constraintTop_toTopOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="@id/divider"
            app:layout_constraintLeft_toRightOf="@id/droplet_image"
            app:layout_constraintStart_toEndOf="@id/droplet_image"/>
        <ImageView
            android:id="@+id/food_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ic_fastfood_white_24dp"
            app:tint="@color/translucent_black"
            app:layout_constraintTop_toTopOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="@id/divider"
            app:layout_constraintLeft_toRightOf="@id/injection_image"
            app:layout_constraintStart_toEndOf="@id/injection_image"/>
        <ImageView
            android:id="@+id/exercise_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ic_directions_run_white_24dp"
            app:tint="@color/translucent_black"
            app:layout_constraintTop_toTopOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="@id/divider"
            app:layout_constraintLeft_toRightOf="@id/food_image"
            app:layout_constraintStart_toEndOf="@id/food_image"/>
        <ImageView
            android:id="@+id/notes_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ic_text_snippet_white_24dp"
            app:tint="@color/translucent_black"
            app:layout_constraintTop_toTopOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="@id/divider"
            app:layout_constraintLeft_toRightOf="@id/exercise_image"
            app:layout_constraintStart_toEndOf="@id/exercise_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>