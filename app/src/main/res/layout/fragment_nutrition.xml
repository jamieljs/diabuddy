<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".nutrition.NutritionFragment">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/nutrition_query"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nutrition_search"
        app:layout_constraintEnd_toStartOf="@id/nutrition_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/query_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/nutrition_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_search_white_24dp"
        android:theme="@style/Theme.Diabuddy.ImageButton"
        app:layout_constraintTop_toTopOf="@id/nutrition_query"
        app:layout_constraintLeft_toRightOf="@id/nutrition_query"
        app:layout_constraintStart_toEndOf="@id/nutrition_query"
        app:layout_constraintRight_toLeftOf="@id/nutrition_loading"
        app:layout_constraintEnd_toStartOf="@id/nutrition_loading"
        app:layout_constraintBottom_toBottomOf="@id/nutrition_query"/>

    <ProgressBar
        android:id="@+id/nutrition_loading"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/nutrition_query"
        app:layout_constraintLeft_toRightOf="@id/nutrition_search"
        app:layout_constraintStart_toEndOf="@id/nutrition_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nutrition_query" />

    <TextView
        android:id="@+id/nutrition_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nutrition_instructions"
        android:textAlignment="center"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_query"
        app:layout_constraintBottom_toTopOf="@id/nutrition_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nutrition_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/nutrition_instructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nutrition_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_query"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/sad"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_sentiment_dissatisfied_white_24dp"
            app:layout_constraintEnd_toStartOf="@id/category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorPrimary" />
        <ImageView
            android:id="@+id/category"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_search_white_24dp"
            app:tint="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/sad"
            app:layout_constraintStart_toEndOf="@id/sad" />
        <TextView
            android:id="@+id/nutrition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nutrition_empty"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/sad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_food_template"
        android:enabled="false"
        app:icon="@drawable/ic_open_in_new_white_24dp"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>