<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/settings_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Theme.Diabuddy.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Diabuddy.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/settings_appbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/settings_autosave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="@dimen/fab_margin"
                android:paddingHorizontal="@dimen/fab_margin"
                android:text="@string/settings_autosave"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:src="@drawable/ic_account_box_white_24dp"
                app:tint="?attr/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/display_name_til"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@id/display_name_til"
                app:layout_constraintEnd_toStartOf="@id/display_name_til"
                app:layout_constraintBottom_toBottomOf="@id/display_name_til"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/display_name_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintTop_toBottomOf="@id/settings_autosave"
                app:layout_constraintLeft_toRightOf="@id/account_icon"
                app:layout_constraintStart_toEndOf="@id/account_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/display_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/email_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_name_til"
                app:layout_constraintLeft_toLeftOf="@id/display_name_til"
                app:layout_constraintStart_toStartOf="@id/display_name_til"
                app:layout_constraintRight_toRightOf="@id/display_name_til"
                app:layout_constraintEnd_toEndOf="@id/display_name_til">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/blood_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:src="@drawable/ic_droplet_white_24dp"
                app:tint="?attr/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/glucose_unit_til"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@id/glucose_unit_til"
                app:layout_constraintEnd_toStartOf="@id/glucose_unit_til"
                app:layout_constraintBottom_toBottomOf="@id/glucose_unit_til"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/glucose_unit_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintTop_toBottomOf="@id/email_til"
                app:layout_constraintLeft_toRightOf="@id/blood_icon"
                app:layout_constraintStart_toEndOf="@id/blood_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/glucose_unit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/blood_glucose_unit"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/lower_bound_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/glucose_unit_til"
                app:layout_constraintLeft_toLeftOf="@id/glucose_unit_til"
                app:layout_constraintStart_toStartOf="@id/glucose_unit_til"
                app:layout_constraintRight_toRightOf="@id/glucose_unit_til"
                app:layout_constraintEnd_toEndOf="@id/glucose_unit_til">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lower_bound_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hypo_threshold_et"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/upper_bound_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lower_bound_til"
                app:layout_constraintLeft_toLeftOf="@id/glucose_unit_til"
                app:layout_constraintStart_toStartOf="@id/glucose_unit_til"
                app:layout_constraintRight_toRightOf="@id/glucose_unit_til"
                app:layout_constraintEnd_toEndOf="@id/glucose_unit_til">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upper_bound_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hyper_threshold_et"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/diagnosis_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/upper_bound_til"
                app:layout_constraintLeft_toLeftOf="@id/glucose_unit_til"
                app:layout_constraintStart_toStartOf="@id/glucose_unit_til"
                app:layout_constraintRight_toRightOf="@id/glucose_unit_til"
                app:layout_constraintEnd_toEndOf="@id/glucose_unit_til">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/diagnosis_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/year_of_diagnosis_et"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/person_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:src="@drawable/ic_emoji_people_white_24dp"
                app:tint="?attr/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/dob_til"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dob_til"
                app:layout_constraintEnd_toStartOf="@id/dob_til"
                app:layout_constraintBottom_toBottomOf="@id/dob_til"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/dob_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintTop_toBottomOf="@id/diagnosis_til"
                app:layout_constraintLeft_toRightOf="@id/person_icon"
                app:layout_constraintStart_toEndOf="@id/person_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dob_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/date_of_birth_et"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/weight_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dob_til"
                app:layout_constraintLeft_toLeftOf="@id/dob_til"
                app:layout_constraintStart_toStartOf="@id/dob_til"
                app:layout_constraintRight_toRightOf="@id/dob_til"
                app:layout_constraintEnd_toEndOf="@id/dob_til">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weight_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/weight_et"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/height_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/weight_til"
                app:layout_constraintLeft_toLeftOf="@id/dob_til"
                app:layout_constraintStart_toStartOf="@id/dob_til"
                app:layout_constraintRight_toRightOf="@id/dob_til"
                app:layout_constraintEnd_toEndOf="@id/dob_til">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/height_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/height_et"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>